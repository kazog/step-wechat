/* components/jump/jump.wxss */

.jump-text {
  float: left;
  font-size: 34rpx;
  font-weight: 600;
  position: relative;
}

.jump-text:nth-child(1) {
  -webkit-animation: jump 1s linear 0s infinite alternate;
}

.jump-text:nth-child(2) {
  -webkit-animation: jump 1s linear 0.2s infinite alternate;
}

.jump-text:nth-child(3) {
  -webkit-animation: jump 1s linear 0.4s infinite alternate;
}

.jump-text:nth-child(4) {
  -webkit-animation: jump 1s linear 0.6s infinite alternate;
}

.jump-text:nth-child(5) {
  -webkit-animation: jump 1s linear 0.8s infinite alternate;
}

.jump-text:nth-child(6) {
  -webkit-animation: jump 1s linear 0.5s infinite alternate;
}

.jump-text:nth-child(7) {
  -webkit-animation: jump 1s linear 0.6s infinite alternate;
}

.jump-text:nth-child(8) {
  -webkit-animation: jump 1s linear 0.7s infinite alternate;
}

.jump-text:nth-child(9) {
  -webkit-animation: jump 1s linear 0.8s infinite alternate;
}

.jump-text:nth-child(10) {
  -webkit-animation: jump 1s linear 0.9s infinite alternate;
}

.jump-text:nth-child(11) {
  -webkit-animation: jump 1s linear 1s infinite alternate;
}

@-webkit-keyframes jump {
  0% {
    top: 0px;
    color: rgb(234, 0, 255);
  }

  50% {
    top: -7px;
    color: rgb(255, 166, 0);
  }

  100% {
    top: 7px;
    color: rgb(0, 26, 255);
  }
}