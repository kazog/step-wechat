.bg-image {
  top: 0;
  z-index: 1;
  width: 100vw;
  height: 100vh;
  position: fixed;
  /* background-color: bisque; */
}
.log-list {
  z-index: 9;
  padding-top: 24rpx;
  min-height: 90vh;
  background-color: rgba(0, 0, 0, 0.3);
}

.action-box {
  width: 100%;
  height: 122rpx;
  position: fixed;
  bottom: 32rpx;
  z-index: 10;
  display: flex;
  flex-direction: row;
  justify-content: space-between;

  color: white;
  font-size: 26rpx;
  font-weight: 500;
}

.img-but {
  width: 79rpx;
  height: 79rpx;
  margin-bottom: 8rpx;
  border-radius: 50%;
  background-color: white;
}

.scale-img {
  width: 96px;
  height: 96px;
  /* background: url(shishi.png) no-repeat; */
  border-radius: 48px;
  -webkit-animation: run 2s linear 0s infinite;
  
}

.scale:hover {
  /* 暂停动画的执行 */
  -webkit-animation-play-state: paused;
}


@-webkit-keyframes run {
  from {
    /* -webkit-transform: rotate(0deg); */
    -webkit-transform: scale(0.7);
  }

  to {
    /* -webkit-transform: rotate(360deg); */
    -webkit-transform: scale(1.2);
  }
}