}
.ads-ic {
    width: 26rpx;
    height: 26rpx;
    margin-right: 12rpx;
    background-color: #FED4B2;
}
.ads-text {
    font-size: 24rpx;
    color: #323232;
}
.ads-line {
    padding-left: 20rpx;
    margin: 0 32rpx;
    border-left: solid 1px #f5f5f5;
}
.shop-line {
    margin-left: 32rpx;
    line-height: 80rpx;
}
.shop-title {
    color: #232323;
    font-size: 32rpx;
    font-weight: 500;
    margin-left: 20rpx;
    font-family: PingFangSC-Medium;
}
.shop-item {
    margin-bottom: 16rpx;
    background-color: white;
}

