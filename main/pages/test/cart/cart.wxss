.column-box {
 display: flex;
 flex-direction: column;
}

.row-box {
    display: flex;
    flex-direction: row;
    align-items: center;
}
.center {
    align-items: center;
    justify-content: center;
}
.flex {
    flex: 1;
}
.sub-item {
    /* align-items: flex-start; */
    padding-left: 32rpx;
    min-height: 64rpx;
    border-bottom: solid 1px #f5f5f5;
}
.sub-box {
    color: white;
    font-size: 20rpx;
    text-align: center;
    line-height: 26rpx;
    background-color: #FE7100;
    height: 26rpx;
    width: 48rpx;
    border-radius: 4rpx;
    margin-right: 8rpx;
    margin-top: 2rpx;
}
.sub-text {
    color: #232323;
    font-size: 24rpx;
}
.add-on {
    color: #969696;
    font-size: 24rpx;
    margin-left: 16rpx;
}
.right-ic {
    width: 24rpx;
    height: 24rpx;
    margin-top: 4rpx;
    margin-left: 8rpx;
    margin-right: 32rpx;
    background-color: #f3f3f3;
}
.cart-scroll {
    overflow-x: scroll;
    position: relative;
    padding-left: 32rpx;
    border-bottom: solid 1px #f5f5f5;
}
.cart-scroll::-webkit-scrollbar {
    display: none;
}
.goods-delete {
    width: 140rpx;
    /* height: 100%; */
    min-width: 140rpx;
    min-height: 240rpx;
    padding-bottom: -24rpx;
    background-color: #FF4B33;

    color: white;
    text-align: center;
    line-height: 240rpx;
}
.goods-content {
    min-width: 450rpx;
    min-height: 192rpx;
    margin: 24rpx 0;
}
.check-img {
    width: 36rpx;
    height: 36rpx;
    min-width: 36rpx;
    background-color: #FE7100;
}

.goods-img {
    min-width: 192rpx;
    width: 192rpx;
    height: 192rpx;
    margin: 24rpx 24rpx;
    border-radius: 8rpx;
    background-color: lavender;
}
.goods-title {
    color: #232323;
    font-size: 28rpx;
    font-weight: 500;
    margin-bottom: 12rpx;
    font-family: PingFangSC-Medium;

}
.goods-cls {
    color: #676767;
    font-size: 22rpx;
    text-align: center;
    height: 32rpx;
    line-height: 32rpx;
    padding: 0 12rpx;
    margin-right: 8rpx;
    margin-bottom: 12rpx;
    border-radius: 4rpx;
    background-color: #f3f3f3;
}
.coupon-box {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.coupon-tag {
    color: #FE7100;
    font-size: 22rpx;
    height: 32rpx;
    line-height: 32rpx;
    border-radius: 6rpx;
    margin-right: 8rpx;
    padding: 0 6rpx;
    border: solid 1px #FED4B2;
}
.count-box {
    margin-right: 32rpx;
}
.count-edit {
    width: 48rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    text-align: center;
    border: solid 1px #efefef;
}
.goods-count {
    width: 64rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    text-align: center;
    border-top: solid 1px #efefef;
    border-bottom: solid 1px #efefef;
}
.goods-price {
    color: #F56105;
    font-size: 32rpx;
    font-weight: 500;
}
.price-box {
    margin-top: 22rpx;
}
.look-other {
    color: #FE7100;
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 8rpx;
    padding: 0 8rpx;
    margin-right: 32rpx;
    border: solid 1px #FFB880;
}